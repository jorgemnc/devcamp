<h1>Angular Portfolio Items</h1>

<%= link_to "Crear nuevo portfolio item", new_portfolio_path if logged_in?(:site_admin) %>


<% @angular_portfolio_items.each do |portfolio_item| %>
	<p><%#= portfolio_item.title %></p>
	<h2><%= link_to portfolio_item.title, portfolio_show_personalizado_path(portfolio_item.id) %></h2>
	<p><%= portfolio_item.subtitle %></p>
	<p><%= portfolio_item.body %></p>
	<p><%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %></p>
	<%= link_to "Editar", edit_portfolio_path(portfolio_item.id) if logged_in?(:site_admin) %>
	<%= link_to 'Destroy', portfolio_item, method: :delete, data: { confirm: "¿Estás seguro?" } if logged_in?(:site_admin) %>
<%end%>